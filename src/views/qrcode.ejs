<!DOCTYPE html>
<html>
  <head>
    <title>QR Code</title>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      type="text/javascript"
    ></script>
  
    <script>
      setInterval(() => {
        fetch('/qrcode-render')
        .then((response) => response.json())
        .then((data) => {
          if (data.data !== "") $("#qr-code").html(data.data)
      })
      }, 5000);
    </script>
  </head>

  <body style=" display:flex; flex-direction:column; justify-content:center;
  min-height:100vh;">
    <div style="
    text-align: center;
">
      <div
        id="qr-code"
      ><image src="<%= img %>" width="1000px"/></div>
    </div>
  </body>
</html>
