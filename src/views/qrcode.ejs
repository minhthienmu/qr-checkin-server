<!DOCTYPE html>
<html>
  <head>
    <title>QR Code</title>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      type="text/javascript"
    ></script>
    <script src="socket.io/socket.io.js"></script>

    <script>
      var socket = io("qr-checkin-server.vercel.app");
      //var socket = io("http://localhost:8008");
     
      socket.on("qrcode", function (img) {
        console.log(img);
        $("#qr-code").html(img);
      });
    </script>
  </head>

  <body style=" display:flex; flex-direction:column; justify-content:center;
  min-height:100vh;">
    <div style="
    text-align: center;
">
      <div
        id="qr-code"
      ><image src="<%= img %>" width="1000px"/></div>
    </div>
  </body>
</html>
